<?xml version="1.0" encoding="utf-8"?>
<root>
  <!--#.配置文件-->
  <config>
    <file_path>cfg.app.xml</file_path>
  </config>

  <!--#.日志选项-->
  <logging>
    <sync  value="false"/>
    <level value="info"/>
    <memcache value="5M"/>
    <file_sink value="true">
      <file_path>./log/</file_path>
      <roll_size>100M</roll_size>
      <flush_inverval>0</flush_inverval>
      <full_path>20170104-160222.ujoychou-PC.00051124.log</full_path>
    </file_sink>
    <console_sink value="true"/>
    <max_sync_millsecs value="3000"/>
  </logging>

  <!--#.生命机制-->
  <eco enable="true">
    <being enable="true">
      <unit_live_tick>5</unit_live_tick>
    </being>
    <task_server_thread_size value="2"/>
  </eco>

  <!--#.命令模式-->
  <command enable="true">
  </command>

  <!--#.插件管理-->
  <erx enable="false">
  </erx>

  <!--#.路由中心-->
  <router enable="true">
    <front_router enable="false">
      <addr_shdx>127.0.0.1:40001</addr_shdx>
      <addr_shlt>127.0.0.1:40002</addr_shlt>
    </front_router>
    <trade_router enable="false">
      <addr_shdx>127.0.0.1:40003</addr_shdx>
      <addr_shlt>127.0.0.1:40004</addr_shlt>
    </trade_router>
  </router>

  <!--#.服务者-->
  <provider enable="true" router="front_router">
    <service>hornet</service>
    <port>50000</port>
    <tick_time value="15"/>
    <max_connection_size value="2000"/>
    <max_session_size value="100000"/>
    <io_heartbeat value="false"/>
    <response_heartbeat value="false"/>
    <rhythm_heartbeat value="true"/>
    <heartbeat_recv_tick value="3"/>
    <heartbeat_send_tick value="2"/>
    <no_delay value="true"/>
    <io_thread_size value="2"/>
    <business_thread_size value="4"/>
  </provider>

  <!--#.消费者-->
  <customer enable="true">
    <!--路由中心：交易-->
    <sub_account_centre router="trade_router"/>
    <!--路由中心：查询-->
    <sub_account_trade router="trade_router"/>
    <!--团队服务-->
    <team>
      <addr_shdx>127.0.0.1:50011</addr_shdx>
      <addr_shlt>127.0.0.1:50012</addr_shlt>
    </team>
    <!--行情服务-->
    <market>
      <addr_shdx>127.0.0.1:50013</addr_shdx>
      <addr_shlt>127.0.0.1:50014</addr_shlt>
    </market>
  </customer>
</root>